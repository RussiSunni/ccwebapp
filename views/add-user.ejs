<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Concious Coding</title>
</head>

<body>
    <%- include('partials/navbar'); %>

        <div class="container">
            <div class="row">
                <div class="col-sm-4 brand-border">
                    <h1>Add Student</h1>

                    <form action="/users/add" method="POST">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" placeholder="name" name="name" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" placeholder="email address" class="form-control" name="email">
                        </div>
                        <div class="mb-3"> <label for="username">DOB</label>
                            <input type="date" placeholder="DOB" name="dob" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="cohort">Cohort</label>
                            <select class="form-select" id="cohort" name="cohort">
                                <option>Choose a cohort</option>>
                            </select>
                        </div>
                        <div class="mb-3">
                              <input type="checkbox" id="is_admin" name="is_admin" value="1">
                              <label for="is_admin">Is an admin?</label>
                        </div>
                        <button type="submit" class="btn brand-button">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <script>
            // Script for the drop-down list
            var url = "/cohorts/list";
            // get the rows from the SQL query
            $.get(url, function (data, status) {
                var select = document.getElementById("cohort");
                var options = data;

                for (var i = 0; i < options.length; i++) {
                    var opt = options[i];
                    var el = document.createElement("option");
                    el.textContent = opt.name;
                    el.value = opt.id;
                    select.appendChild(el);
                }

                if (sessionStorage.getItem("cohortId") != "") {
                    select.value = sessionStorage.getItem("cohortId");
                }
            });
        </script>
</body>

</html>