<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Skill Tree</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <%- include('partials/navbar'); %>

        <div class="container mt-3">
            <form method="POST" action="/users/<%- userId %>/edit?_method=PUT">
                <div class="mb-3">
                    <label for="id" class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" aria-describedby="id" name="id" disabled>
                </div>
                <div class="mb-3">
                    <label for="name">Name</label>
                    <input type="text" id="name" placeholder="name" name="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" id="email" placeholder="email address" class="form-control" name="email">
                </div>
                <div class="mb-3"> <label for="username">DOB</label>
                    <input type="date" id="dob" placeholder="DOB" name="dob" class="form-control">
                </div>
                <div class="mb-3">
                      <input type="checkbox" id="is_admin" name="is_admin" value="1">
                      <label for="is_admin">Is an admin?</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <script type="text/javascript">
            var userId = '<%- userId %>';
            var url = "/users/show/" + userId;

            $.get(url, function (data, status) {
                console.log(data);
                document.getElementById("id").value = data.id;
                document.getElementById("name").value = data.name;
                document.getElementById("email").value = data.email;
                var date = data.dob.substring(0, 10);
                document.getElementById('dob').value = date;

                if (data.is_admin == 1) {
                    document.getElementById('is_admin').checked = true;
                }

            });
        </script>

</body>

</html>