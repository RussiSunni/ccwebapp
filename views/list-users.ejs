<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Concious Coding</title>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Create Game</a>
        <a href="/users">Users</a>
        <a href="/cohorts">Cohorts</a>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="topnav">
                <a href="/users/add">Add user</a>
            </div>
            <h1>Student List</h1>
            <div class="col-sm-10">
            </div>
            <div class="col-sm-2">
                <label for="cars">Choose a cohort:</label>
                <form>
                    <select class="form-select" id="cohorts" name="cohorts">
                        <option>Choose a cohort</option>>
                    </select>
                    <button class="btn btn-primary" type="submit" onclick="chooseCohort()">Submit</button>
                </form>
            </div>
        </div>
        <table class="table">
            <tr>
                <th></th>
                <th>Email</th>
                <th>Name</th>
                <th>Username</th>
                <th>DOB</th>
                <th>Cohort</th>
                <th>Admin</th>
                <th>Login Link</th>
                <th>Last Login</th>
                <th></th>
            </tr>
            <% for(var i=0; i<students.length; i++) {%>
                <tr>
                    <td>1</td>
                    <td>
                        <%= students[i].email %>
                    </td>
                    <td>
                        <%= students[i].name %>
                    </td>
                    <td>
                        <%= students[i].username %>
                    </td>
                    <td>
                        <%= students[i].dob %>
                    </td>
                    <td>1</td>
                    <td>
                        <%= students[i].is_admin %>
                    </td>
                    <td>1</td>
                    <td>1</td>
                    <td>1</td>
                </tr>
                <% } %>
        </table>
    </div>

    <script>
        // Script for the drop-down list
        var url = "/cohorts/list";
        // get the rows from the SQL query
        $.get(url, function (data, status) {
            console.log(data);

            var select = document.getElementById("cohorts");
            var options = data;

            for (var i = 0; i < options.length; i++) {
                var opt = options[i];
                var el = document.createElement("option");
                el.textContent = opt.name;
                el.value = opt.id;
                select.appendChild(el);
            }
        });
    </script>

</body>

</html>