                        <option value="pathways">Pathways</option>
                    </select></br></br> -->
                    <label for="name">Turns per round = 10</label></br></br>
                    <!-- <input type="text" placeholder="turns" name="turns"></br></br>
                    <button type="submit">Submit</button> -->
                </form>

            </div>
            <div class="col-sm-6" style="background-color:pink;">
                <h1>Teams</h1>
                <h2>Yellow Team</h2>
                <ul>
                    <% for(var i=0; i<students.length; i++) {%>
                        <% if(students[i].team=="Yellow" ){ %>
                            <li>
                                <a
                                    href="games/pathways?nick_name=<%= students[i].nick_name%>&team=<%= students[i].team%>">
                                    <%= students[i].id %>
                                        <%= students[i].first_name %>
                                            <%= students[i].last_name %>
                                </a>
                            </li>
                            <% } %>
                                <% } %>
                </ul>
                <h2>Blue Team</h2>
                <ul>
                    <% for(var i=0; i<students.length; i++) {%>
                        <% if(students[i].team=="Blue" ){ %>
                            <li>
                                <a
                                    href="games/pathways?nick_name=<%= students[i].nick_name%>&team=<%= students[i].team%>">
                                    <%= students[i].id %>
                                        <%= students[i].first_name %>
                                            <%= students[i].last_name %>
                                </a>
                            </li>
                            <% } %>
                                <% } %>
                </ul>
            </div>
        </div>
    </div>


</body>

