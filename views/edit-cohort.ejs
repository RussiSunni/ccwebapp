<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Skill Tree</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <%- include('partials/navbar'); %>

        <div class="container mt-3">
            <form method="POST" action="/cohorts/<%- cohortId %>/edit?_method=PUT">
                <div class="mb-3">
                    <label for="id" class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" aria-describedby="id" name="id" disabled>
                </div>
                <div class="mb-3">
                    <label for="name">Name</label>
                    <input type="text" id="name" placeholder="name" name="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="zoom_link" class="form-label">Zoom link</label>
                    <input type="text" id="zoom_link" placeholder="Zoom link" class="form-control" name="zoom_link">
                </div>
                <button type="submit" class="btn brand-button">Submit</button>
            </form>
        </div>

        <script type="text/javascript">
            var cohortId = '<%- cohortId %>';
            var url = "/cohorts/show/" + cohortId;

            $.get(url, function (data, status) {
                console.log(data);
                document.getElementById("id").value = data.id;
                document.getElementById("name").value = data.name;
                document.getElementById("zoom_link").value = data.zoom_link;

            });
        </script>

</body>

</html>