<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Concious Coding</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <div class="container login-form mt-3">
        <form action="/login-attempt" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Password" class="form-control" required>
            </div>
            <button type="submit" class="btn brand-button">Submit</button>
        </form>
        <div class="mt-5">
            <p>Email = "cc@consciouscoding.com"</p>
            <p>Password = "password"</p>
        </div>
    </div>
</body>
<script type="text/javascript">
    $(document).ready(function () {
        var userData = {};

        if (window.location.href.indexOf("?") > -1) {

            var url = window.location.href;
            const urlArray = url.split("?");

            // alert(urlArray[1]);

            var url1 = "/users/list";
            // get the rows from the SQL query
            $.get(url1, function (data, status) {
                for (var i = 0; i < data.length; i++) {
                    if (urlArray[1] == data[i].admin_code) {
                        console.log(data[i]);
                        userData.email = data[i].email;
                        userData.admin_code = data[i].admin_code;

                        url2 = "/login-attempt";
                        $.post(url2,
                            {
                                email: userData.email,
                                admin_code: userData.admin_code
                            },
                            function () {
                                window.location.href = "http://localhost:3000/";
                            });

                        return;
                    }
                }
            });
        }
    });
</script>

</html>